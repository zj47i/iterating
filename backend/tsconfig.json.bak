{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "outDir": "./dist",
        "allowJs": true,
        "types": ["node", "mocha"]
    },
    "references": [{ "path": "../interface" }],
    "include": ["src/**/*.ts", "test/**/*.ts"]
}
